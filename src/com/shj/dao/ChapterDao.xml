<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shj.dao.ChapterDao" >

    <!--通过id查询章节-->
    <select id="findId" parameterType="Integer" resultType="Chapter">
        select chaptername,content from chapter where chapter_id=#{id}
    </select>

    <!--插入章节-->
    <insert id="addChapter" parameterType="java.util.Map">
        insert into chapter(book_id,chaptername,content) value(#{book_id},#{chaptername},#{content})
    </insert>

    <!--删除章节-->
    <delete id="delId" parameterType="Integer">
        delete from chapter where chapter_id=#{id}
    </delete>

    <!--修改章节内容-->
    <update id="updChapter" parameterType="java.util.Map">
        update chapter set chaptername=#{name},content=#{content} where chapter_id=#{id}
    </update>

</mapper>